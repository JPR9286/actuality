
<h1 class="text-center"> Searching Actus and Chatrooms</h1>

<div class="container">
  <div class="row justify-content-center my-3">
      <%= form_with url: searches_path, method: :get, class: "d-flex" do %>
        <%= text_field_tag :query,
              params[:query],
              class: "form-control",
              placeholder: "Type something.."
          %>
        <%= submit_tag "Search", class: "btn btn-primary" %>
      <% end %>
  </div>

  <h2><i class="fa-regular fa-comments"></i> Chatrooms</h2>
    <div class="d-flex flex-row" style="overflow-x: scroll;">
        <% @chatrooms.each do |chatroom| %>
          <div class="card-chatroom m-3">
            <%= link_to chatroom.title, chatroom_path(chatroom), style: "color: white; text-decoration: none" %>
          </div>
        <% end %>
    </div>

  <i class="fa-solid fa-circle-plus"> see more </i>

  <h2> <i class="fa-regular fa-newspaper"></i> Articles</h2>
    <div class="d-flex flex-column">
      <% @articles.each do |article| %>
      <%# <span class="border border-dark"></span> %>
        <div class="card-article mb-5">
          <div class="image-card">
            <% if article.image_url  %>
            <%= image_tag article.image_url, crop: :fill, style:"width: 100%";%>
            <%# else image par defaut %>
            <% end %>
          </div>
          <div class="title-card mt-2">
            <%# <li>= article.title</li> %>
            <p><%= article.title %></p>
          </div>
          <div class="description-card">
            <% if article.description %>
            <%# a enlever apres si articles a une description %>
              <p><%= article.description.truncate(100) %></p>
            <% end %>
          <%# link_to chatroom_messages_path(chatroom), class: "btn" do %>
          <div class="p-1 rounded-circle align-self-end bubble-share">
            <i class="fa-solid fa-share"></i>
          </div>
          <%# end %>
          </div>
        </div>
      <% end %>
    </div>
