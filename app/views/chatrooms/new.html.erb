<p> New chatroom</p>
<%# Ajout d'un bouton pour sÃ©lectionner une image parmi les images disponibles dans l'illustration des articles %>


<%= simple_form_for @chatroom, data: { controller: "chatrooms-select-image" } do |f| %>
  <%= f.input :title %>
  <%= f.association :category, input_html: { data: { chatrooms_select_image_target: "category", action: "change->chatrooms-select-image#categoryChanged" } } %>
  <div data-chatrooms-select-image-target="imageSelectContainer"></div>
  <%= f.submit %>
<% end %>
